---
import type { CollectionEntry } from 'astro:content'

interface Props {
  content: CollectionEntry<'house'>
}

const {
  content: {
    slug,
    data: { name, image, arrow, background: className },
  },
} = Astro.props
---

<div class={className}>
  <div class="flex-col justify-center items-start gap-[93px] inline-flex">
    <div class="flex-col justify-start items-start flex">
      {
        (typeof name === 'string' ? [name] : name).map((line: string) => (
          <div class="px-[7px] bg-lime-300 rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
            <div class=" text-3xl font-medium">{line}</div>
          </div>
        ))
      }
    </div>
    <a
      class="justify-start items-center gap-[15px] inline-flex"
      href={`/houses/${slug}`}
    >
      <div class="w-[41px] h-[41px] relative">
        <img class="w-[41px] h-[41px] left-0 top-0 absolute" src={arrow} />
      </div>
      <div class="text-xl font-normal leading-7">詳しく見る</div>
    </a>
  </div>
  <div
    class="w-[210px] h-[170px] pt-0.5 pb-[1.95px] justify-center items-center flex"
  >
    <img class="hidden md:block" src={image} />
  </div>
</div>
